@model Book.Models.CoverType
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post">
   <div class="border p-3 mt-4">
       <div class="row pb-2">
           <h2 class="text-primary">Create CoverType</h2>
       </div>

       <div class="row mb-3">
           <label asp-for="Name"></label>
           <input asp-for="Name" class="form-control" />
           <span asp-validation-for="Name" class="text-danger"></span>

       </div>



       <button type="submit" class="btn btn-primary" style="width:150px" >Update</button>
       <a asp-controller="CoverType" asp-action="Index" class="btn btn-secondary" style="width:100px">Back</a>

   </div>
</form>

