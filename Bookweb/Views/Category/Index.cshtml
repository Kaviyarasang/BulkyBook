@model IEnumerable<Book.Models.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<partial name="_Notifications"></partial>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
     </div>

     <div  class="col-6 text-end">

    <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
    <i class="bi bi-file-earmark-plus"></i>&nbsp; New Category
    </a>
    </div>
    </div>

    <br />
    <br />




<h1>Index-Category</h1>
<table class="table table-bordered table-striped" style="width:100%">
    <thead> 

    <tr> 
        <th>
            Category Name
        </th>
         <th>
            Display order
        </th>
        <th>

        </th>
                <th>

        </th>
    </tr> 
    </thead> 

    <tbody>
        @foreach (var obj in Model)
        {
           <tr>
               <td width:50%>
                 @obj.Name
               </td>
               <td width:30%>
                 @obj.Displayorder
               </td>
               <td class="w-25" role="group" >
                   <a asp-controller="Category" asp-action="Edit" asp-route-Id=@obj.Id><i class="bi bi-pencil-square" class="btn btn-primary mx-2"></i>
                       Edit
                   </a>
               </td>

               <td class="w-25" role="group" >
                   <a asp-controller="Category" asp-action="Delete" asp-route-Id=@obj.Id><i class="bi bi-trash3-fill" class="btn btn-danger mx-2"></i>
                       Delete
                   </a>
               </td>

           </tr> 
        }
    </tbody>
    </table>
    </div>
